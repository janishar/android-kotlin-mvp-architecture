<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.mindorks.framework.mvp">

  <application
    android:allowBackup="false"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:name=".MvpApp"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity android:name=".ui.splash.view.SplashActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name=".ui.main.view.MainActivity"
      android:theme="@style/AppTheme">
    </activity>
    <activity android:name=".ui.login.view.LoginActivity">
    </activity>
    <activity
      android:label="@string/title_activity_navigation_drawer"
      android:name=".ui.main.view.NavigationActivity"
      android:theme="@style/AppTheme">
    </activity>
  </application>

</manifest>